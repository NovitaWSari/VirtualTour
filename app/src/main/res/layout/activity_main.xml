<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Salam pembuka -->
    <TextView
        android:id="@+id/salamPembuka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assalamu'alaikum"
        android:textSize="26sp"
        android:textColor="#75A47F"
        android:fontFamily="@font/font1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/salamPembuka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat datang di tour maps Pondok Pesantren Ngalah, silahkan pilih tujuan asrama, kami akan memandu menuju lokasi."
        android:textSize="20sp"
        android:textColor="#000"
        android:fontFamily="@font/font2"
        app:layout_constraintTop_toBottomOf="@id/salamPembuka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/salamPembuka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nikmati juga pemandangan 360 untuk memudahkan anda menemukan lokasi yang sesuai."
        android:textSize="20sp"
        android:textColor="#000"
        android:fontFamily="@font/font2"
        app:layout_constraintTop_toBottomOf="@id/salamPembuka1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Shape 1 -->
    <LinearLayout
        android:id="@+id/shape1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#75A47F"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/salamPembuka2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shape2"
        app:layout_constraintWidth_default="spread">

        <ImageView
            android:id="@+id/foto1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/muslimm"
            android:scaleType="centerCrop"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/judul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asrama Putra"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font1" />
    </LinearLayout>

    <!-- Shape 2 -->
    <LinearLayout
        android:id="@+id/shape2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#75A47F"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/salamPembuka2"
        app:layout_constraintStart_toEndOf="@id/shape1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="spread">

        <ImageView
            android:id="@+id/foto2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/muslimah"
            android:scaleType="centerCrop"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/judul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asrama Putri"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font1" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
