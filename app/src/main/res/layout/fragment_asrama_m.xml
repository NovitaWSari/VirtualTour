<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Foto 360 -->
        <ImageView
            android:id="@+id/image_360M"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/placeholder_shape"
            android:contentDescription="@string/asramaM"
            android:scaleType="centerCrop"
            android:onClick="view360Image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/directionOneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Lokasi Di Google Maps"/>

        <!-- Profil Asrama -->
        <TextView
            android:id="@+id/addressM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profil_asramaM"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:gravity="start"/>

        <!-- Kontak Asrama -->
        <TextView
            android:id="@+id/profileM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kontak_asramaM"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="start"/>

        <!-- Fasilitas Asrama -->
        <TextView
            android:id="@+id/facilities_titleM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fasilitas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/fasilitas_shape"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fasilitasM1"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/fasilitas_shape"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fasilitasM2"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Kegiatan Harian -->
        <TextView
            android:id="@+id/kegiatan_harian_asramaM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kegiatan_harian_asramaM"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="start"/>

        <!-- Kegiatan Mingguan -->
        <TextView
            android:id="@+id/kegiatan_mingguan_asramaM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kegiatan_mingguan_asramaM"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="start"/>

        <!-- Kegiatan Bulanan -->
        <TextView
            android:id="@+id/kegiatan_bulanan_asramaM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kegiatan_bulanan_asramaM"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="start"/>

        <!-- Kegiatan Tahunan -->
        <TextView
            android:id="@+id/kegiatan_tahunan_asramaM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kegiatan_tahunan_asramaM"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="start"/>
    </LinearLayout>
</ScrollView>
